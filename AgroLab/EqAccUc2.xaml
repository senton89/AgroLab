            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#267AFC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <!-- <ColumnDefinition Width="*"/> -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel>
                <Label Grid.Column="0" Grid.Row="0">Дата учета:</Label>
                <DatePicker x:Name="dpDateAccounting" Grid.Column="1" Grid.Row="0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="0" Grid.Row="1">
                <Label Grid.Column="0" Grid.Row="1">Наименование оборудования:</Label>
                <TextBox x:Name="txtEquipmentName" Grid.Column="1" Grid.Row="1"/>
            </StackPanel>

            <Label Grid.Column="0" Grid.Row="2">Категория оборудования:</Label>
            <ComboBox x:Name="cmbCategory" Grid.Column="1" Grid.Row="2" 
                      ItemsSource="{Binding Categories}">
                <ComboBoxItem Content="СИ"/>
                <ComboBoxItem Content="ИО"/>
                <ComboBoxItem Content="ВО"/>
            </ComboBox>

            <Label Grid.Column="2" Grid.Row="0">Наименование изготовителя:</Label>
            <TextBox x:Name="txtManufacturer" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2"/>

            <Label Grid.Column="2" Grid.Row="1">Заводской номер:</Label>
            <TextBox x:Name="txtSerialNumber" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2"/>
            
            <Label Grid.Column="2" Grid.Row="2">Дата получения:</Label>
            <DatePicker x:Name="dpReceivedDate" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2"/>
            
            <Label >Состояние на момент получения:</Label>
            <TextBox x:Name="txtCondition"/>
            
            <Label>Данные о поверке:</Label>
            <TextBox x:Name="txtVerificationData"/>
            
            <Label>Дата следующей поверки:</Label>
            <DatePicker x:Name="dpNextVerificationDate"/>

            <Button Content="Добавить" Click="AddButton_Click" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" />
            <Button Content=" Удалить" Click="DeleteButton_Click" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2"/>
            <Button Content="Редактировать" Click="EditButton_Click" Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="2"/>
        </Grid>

        <Border Grid.Row="1" CornerRadius="10" BorderBrush="DarkGray" Margin="20">
            <ListView BorderBrush="White" x:Name="lvEquipmentList" SelectionChanged="LvEquipmentList_SelectionChanged"/>
        </Border>
    </Grid>
</UserControl>