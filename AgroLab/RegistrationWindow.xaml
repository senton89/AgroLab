<Window x:Class="AgroLab.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AgroLab"
        Title="Авторизация" MinHeight="320" MinWidth="400" Height="320" Width="400"
        Background="White">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="AGROLAB" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#578ADA"/>

            <TextBlock Text="Логин:" FontSize="16" Margin="10,20,10,5"/>
            <TextBox Name="UsernameTextBox" Width="280" Height="30" 
                     Background="White" BorderBrush="#B2EBF2" BorderThickness="1"
                     FontSize="18"/>

            <TextBlock Text="Пароль:" FontSize="16" Margin="10,20,10,5"/>
            <PasswordBox Name="PasswordBox" Width="280" Height="30" 
                          Background="White" BorderBrush="#B2EBF2" BorderThickness="1"
                         FontSize="18"/>
            
            <Button Content="Зарегистрироваться" Width="280" Height="35" Margin="0,20,0,0" 
                    Background="#267AFC" Foreground="White" FontSize="16" 
                    BorderBrush="Transparent" Cursor="Hand" Click="RegButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
